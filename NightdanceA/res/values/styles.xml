<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- 강좌 상세보기 정보섹션의 제목 -->
	<style name="ClipDetailInfoTitle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">5dp</item>
        </style>
    <!-- 강좌 상세보기 정보섹션의 라벨 -->
	<style name="ClipDetailInfoLabel" parent="AppTheme">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">10dp</item>
        </style>
    <!-- 강좌 상세보기 정보섹션의 값 -->
		<style name="ClipDetailInfoValue" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#040404</item>
        <item name="android:gravity">left</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">75dp</item>
        </style>
	<style name="ClipDetailInfoLabel2" parent="AppTheme">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Gray</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginLeft">160dp</item>
        </style>
    <!-- 강좌 상세보기 정보섹션의 값 -->
		<style name="ClipDetailInfoValue2" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#040404</item>
        <item name="android:gravity">left</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">225dp</item>
        </style>
		<!-- 강좌 상세보기 설명섹션의 값 -->
		<style name="ClipDetailDescValue" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#040404</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 강좌 상세보기 설명섹션의 값 -->
		<style name="ClipDetailCommentNickname" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/RosyBrown</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 섹션 구분 선 -->
		<style name="ClipDetailDevider" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/LightGrey</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <!-- 구입 버튼 -->
		<style name="BuyButton" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
				
</resources>
